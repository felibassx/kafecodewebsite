@model IEnumerable<models.Producto>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Kafecode | @ViewBag.Title</title>
</head>
<body>
    <h2>@ViewBag.Title</h2>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.categoria.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.imagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tipoImagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.descrpcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fechaCreacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.esActivo)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.categoria.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                <img width="50" src="@Url.Action("GetImage", new { id = int.Parse(@Html.DisplayFor(modelItem => item.productoID).ToString())})" />

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tipoImagen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descrpcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fechaCreacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.esActivo)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.productoID }) |
                @Html.ActionLink("Details", "Details", new { id = item.productoID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.productoID })
                @Html.ActionLink("Más Detalles", "Consultas", new { id = item.productoID })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
